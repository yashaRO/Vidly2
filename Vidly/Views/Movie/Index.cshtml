@{
    ViewBag.Title = "Movies";
}
<h1>@ViewBag.Title</h1>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>@ViewBag.Title</th>
            <th>Genre</th>
        </tr>
    </thead>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@Html.ActionLink((string) movie.Name, "Details", "Movie", new { id = movie.Id }, null)</td>
            <td>@movie.Genre</td>
        </tr>
    }

</table>